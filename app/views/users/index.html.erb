<form action="/users" method="post" class="sessionForm">
	<input type="hidden" name="authenticity_token" value="<%=form_authenticity_token%>">

	<h1>Register</h1>

	<% if flash[:reg_errors] %>
		<% flash[:reg_errors].each do |msg| %>
			<ul>
				<li class="error"><%= msg %></li>
			</ul>
		<% end %>
	<% end %>
 
	<div class="row">
		<label for="first_name">First Name:</label>
		<input type="text" name="user[first_name]"><br>
	</div>

	<div class="row">
		<label for="last_name">Last Name:</label>
		<input type="text" name="user[last_name]"><br>
	</div>

	<div class="row">
		<label for="email">Email:</label>
		<input type="text" name="user[email]"><br>
	</div>

	<div class="row">
		<label for="password">Password:</label>
		<input type="password" name="user[password]"><br>
	</div>

	<div class="row">
		<label for="password_confirmation">Confirm Password:</label>
		<input type="password" name="user[password_confirmation]"><br>
	</div>

	<div class="row">
		<input type="submit" value="Register" class="btn blue"> 
	</div>
</form>

